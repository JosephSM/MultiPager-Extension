<script>
const targetDomains = {
  "https://dafhachaim.org": [
    { name: "hasAccount", value: "1" },
    { name: "dafapp", value: "22an34ca5tdug1bhgapikk01u4" },
  ],
  "https://www.zichru.com": [
    { name: "hide_popup", value: "1" },
    {
      name: "remember_web_59ba36addc2b2f9401580f014c7f58ea4e30989d",
      value:
        "%3D%3D",
    },
    {
      name: "zichru_session",
      value:
        "%3D",
    },
  ],
};

document.addEventListener("DOMContentLoaded", function () {
  console.log("üî• Parent script loaded! Injecting cookie scripts into iframes...");

  document.querySelectorAll("iframe").forEach((iframe) => {
    iframe.addEventListener("load", function () {
      try {
        const iframeDocument = iframe.contentDocument || iframe.contentWindow.document;
        if (!iframeDocument) return;
        
        const script = document.createElement("script");
        script.textContent = `
          (function() {
            try {
              const targetDomains = ${JSON.stringify(targetDomains)};
              const currentDomain = window.location.origin;
              
              if (targetDomains[currentDomain]) {
                targetDomains[currentDomain].forEach((cookie) => {
                  document.cookie = `${cookie.name}=${cookie.value}; path=/; domain=${window.location.hostname}; secure; samesite=None;`;
                  console.log(`‚úÖ Set cookie: ${cookie.name} = ${cookie.value} for ${currentDomain}`);
                });
              }
            } catch (err) {
              console.error("‚ùå Error setting cookies in iframe:", err);
            }
          })();
        `;
        
        iframeDocument.documentElement.appendChild(script);
        console.log("‚úÖ Injected script into iframe for", iframe.src);
      } catch (error) {
        console.error("‚ùå Error injecting script into iframe:", error);
      }
    });
  });
});
</script>

